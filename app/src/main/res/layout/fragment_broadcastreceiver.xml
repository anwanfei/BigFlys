<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_upload_ok"
        style="@style/normal_stytle"
        android:background="@drawable/rectangle_radius"
        android:text="ok上传 " />

    <TextView
        android:id="@+id/tv_upload_retrofit"
        style="@style/normal_stytle"
        android:background="@drawable/rectangle_radius"
        android:text="retrofit上传" />

    <TextView
        android:id="@+id/tv_upload_httpcon"
        style="@style/normal_stytle"
        android:background="@drawable/rectangle_radius"
        android:text="原生上传" />

    <TextView
        android:id="@+id/tv_upload_camera"
        style="@style/normal_stytle"
        android:background="@drawable/rectangle_radius"
        android:text="相机上传 " />

    <TextView
        android:id="@+id/tv_upload_album"
        style="@style/normal_stytle"
        android:background="@drawable/rectangle_radius"
        android:text="相册上传" />

    <LinearLayout
        android:id="@+id/ll_con"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/pb_con"
            style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_con"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="0 %" />
    </LinearLayout>
</LinearLayout>