<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_vedio_system"
        style="@style/normal_stytle"
        android:background="@drawable/rectangle_radius"
        android:text="系统播放器" />

    <TextView
        android:id="@+id/tv_vedio_videoview"
        style="@style/normal_stytle"
        android:background="@drawable/rectangle_radius"
        android:text="videoview" />

    <VideoView
        android:id="@+id/vv_vv"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/tv_vedio_mediaplayer"
        style="@style/normal_stytle"
        android:background="@drawable/rectangle_radius"
        android:text="mediaplayer" />

</LinearLayout>